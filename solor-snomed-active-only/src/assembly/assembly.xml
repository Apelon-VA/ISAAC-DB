<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>active-only.bdb</id>
    <formats>
        <format>zip</format>
    </formats>
    <baseDirectory>${artifactId}-${version}-active-only.bdb</baseDirectory>
    <fileSets>
        <fileSet>
            <outputDirectory>berkeley-db</outputDirectory>
            <directory>${basedir}/target/berkeley-db</directory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${basedir}/pom.xml</source>
            <outputDirectory>META-INF/maven/${groupId}/${artifactId}/</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>${basedir}/src/assembly/assembly.xml</source>
            <outputDirectory>META-INF/maven/${groupId}/${artifactId}/src/assembly/</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>${basedir}/src/assembly/LICENSE.txt</source>
            <outputDirectory>META-INF/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${basedir}/src/assembly/LICENSE.txt</source>
            <outputDirectory>META-INF/maven/${groupId}/${artifactId}/src/assembly/</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>${basedir}/src/assembly/MANIFEST.MF</source>
            <outputDirectory>META-INF/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${basedir}/src/assembly/MANIFEST.MF</source>
            <outputDirectory>META-INF/maven/${groupId}/${artifactId}/src/assembly/</outputDirectory>
            <filtered>false</filtered>
        </file>
    </files>
</assembly>
